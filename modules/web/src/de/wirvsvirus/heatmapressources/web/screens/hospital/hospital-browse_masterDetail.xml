<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        xmlns:maps="http://schemas.haulmont.com/maps/0.1/ui-component.xsd"
        caption="msg://browseCaption"
        focusComponent="table"
        messagesPack="de.wirvsvirus.heatmapressources.web.screens.hospital">
    <data>
        <collection id="hospitalsDc"
                    class="de.wirvsvirus.heatmapressources.entity.hospital.Hospital"
                    view="_local">
            <loader id="hospitalsDl">
                <query>
                    <![CDATA[select e from heatmapressources_Hospital e]]>
                </query>
            </loader>
        </collection>
        <instance id="hospitalDc"
                  class="de.wirvsvirus.heatmapressources.entity.hospital.Hospital"
                  view="hospital-view">
            <loader/>
        </instance>
    </data>
    <actions>
        <action id="save" icon="icons/ok.png" caption="mainMsg://actions.Ok" shortcut="CTRL-ENTER"/>
        <action id="cancel" icon="icons/cancel.png" caption="mainMsg://actions.Cancel" description="Esc"/>
    </actions>
    <dialogMode height="600" width="800"/>
    <layout>
        <split id="split" height="100%" orientation="horizontal" reversePosition="true" width="100%">
            <vbox id="lookupBox" expand="table" height="100%" margin="false,true,false,false" spacing="true">
                <filter id="filter" applyTo="table" dataLoader="hospitalsDl">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%"
                            dataContainer="hospitalsDc">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="hospitalName"/>
                        <column id="location"/>
                        <column id="h_maxRooms"/>
                        <column id="h_Rooms_With_RespiratoryVentilator"/>
                        <column id="h_Rooms_With_RespiratoryVentilator_Free"/>
                        <column id="h_IntensiveCareUnits"/>
                        <column id="description"/>
                    </columns>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="table.create"/>
                        <button id="editBtn" action="table.edit"/>
                        <button id="removeBtn" action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
                <hbox id="lookupActions" spacing="true" visible="false">
                    <button action="lookupSelectAction"/>
                    <button action="lookupCancelAction"/>
                </hbox>
            </vbox>
            <vbox id="editBox" height="100%" margin="false,false,false,true" expand="fieldGroupBox" spacing="true">
                <scrollBox id="fieldGroupBox">
                    <form id="form" dataContainer="hospitalDc">
                        <column width="250px">
                            <textField id="h_ControlCenterField" property="h_ControlCenter"/>
                            <textField id="hospitalNameField" property="hospitalName"/>
                            <textField id="locationField" property="location"/>
                            <textField id="h_maxRoomsField" property="h_maxRooms"/>
                            <textField id="h_Rooms_With_RespiratoryVentilatorField" property="h_Rooms_With_RespiratoryVentilator"/>
                            <textField id="h_Rooms_With_RespiratoryVentilator_FreeField" property="h_Rooms_With_RespiratoryVentilator_Free"/>
                            <textField id="h_IntensiveCareUnitsField" property="h_IntensiveCareUnits"/>
                            <textField id="descriptionField" property="description"/>
                        </column>
                    </form>
                </scrollBox>
                <hbox id="actionsPane" spacing="true" visible="false">
                    <button id="saveBtn" action="save"/>
                    <button id="cancelBtn" action="cancel"/>
                </hbox>
            </vbox>
        </split>
        <maps:geoMap zoom="7" center="8.4964812, 50.1211277" id="Map" width="100%" height="100%">
            <maps:layers selectedLayer="mapsLayer">
                <maps:tile id="tiles" tileProvider="maps_OpenStreetMap"/>
                <maps:vector id="mapsLayer" dataContainer="hospitalsDc" editable="true"/>
            </maps:layers>
        </maps:geoMap>
    </layout>
</window>
